@page
@model AceJobAgency3.Pages.ChangePasswordModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Change Password";
}

<style>
    body {
        background: linear-gradient(135deg, #6A82FB, #FC5C7D);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .change-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        animation: @@keyframes fadeInUp 0.8s ease-out;
    }
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translate3d(0, 40px, 0);
        }
        to {
            opacity: 1;
            transform: translate3d(0, 0, 0);
        }
    }
    .change-header {
        background: #fff;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        padding: 1.5rem;
        text-align: center;
    }
    .change-header h2 {
        margin: 0;
        color: #333;
    }
    .change-form {
        padding: 2rem;
        background: #fff;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }
    .change-form label {
        font-weight: 600;
        color: #333;
    }
    .change-form .form-control {
        border-radius: 8px;
    }
    .change-form .btn {
        border-radius: 50px;
        padding: 0.75rem;
        transition: transform 0.2s;
    }
    .change-form .btn:hover {
        transform: scale(1.05);
    }
    .back-to-dashboard {
        text-align: center;
        margin-top: 1rem;
    }
</style>

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-8 col-lg-6">
            <div class="card change-card">
                <div class="change-header">
                    <h2>Change Password</h2>
                </div>
                <div class="change-form">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label"></label>
                            <input asp-for="Input.OldPassword" type="password" class="form-control" placeholder="Enter your current password" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                            <input asp-for="Input.NewPassword" type="password" class="form-control" placeholder="Enter your new password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmNewPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm your new password" />
                            <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        </div>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="mt-3 alert alert-info" role="alert">
                            @Html.Raw(Model.StatusMessage)
                        </div>
                    }
                    <div class="back-to-dashboard">
                        <a asp-page="/Index" class="btn btn-outline-secondary mt-3">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

