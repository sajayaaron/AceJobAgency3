@page
@model AceJobAgency3.Pages.ErrorModel
@{
    Layout = null;  // You can set a layout if desired
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Error</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 2em; }
        .error-container { border: 1px solid #ccc; padding: 1em; background: #f8f8f8; }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>An error occurred.</h1>
        <p>We're sorry, but something went wrong.</p>
        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
</body>
</html>
